<h1>Artists (<%=@artists.count%>)</h1>

<div class="flex-between">
  <ul id="artists-list">
  <% @artists.each do |a| %>
    <li><%= link_to a.name, artist_path(a) %></li>
  <% end %>
  </ul>

  <div class="fixed">
    <h3>Add an artist</h3>

    <%= simple_form_for(@artist, html: {class: "form"}) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>

</div>

