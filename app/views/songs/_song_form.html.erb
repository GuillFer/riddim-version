<%= simple_form_for(@song, html: {class: "form"}) do |f| %>

  <div class="form-group">
    <%= f.simple_fields_for(@song.song_artists) do |song_artist| %>
      <%= song_artist.label :name, label: "Artist Name" %>
      <%= song_artist.text_field :name, class: "form-control" %>
    <% end %>
  </div>
  <%= f.input :title %>
  <%= f.input :label %>
  <%= f.input :year, as: :numeric %>
  <%= f.input :riddim %>
  <%= f.input :producer %>
  <%= f.label :original %>
  <%= f.check_box :original %>
  <br>
  <%= f.submit %>
<% end %>
