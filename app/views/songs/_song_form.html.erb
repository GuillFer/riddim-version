<%= simple_form_for(@song, html: {class: "form"}) do |f| %>

  <%= f.association :artists, label: "Artists", include_blank: false, include_hidden: false, input_html: {id: 'artist-select', multiple: true } %>
  <%= f.input :title %>
  <%= f.association :label, input_html: {id: 'label-select'} %>
  <% %>
  <%= f.input :year, as: :numeric %>
  <%= f.association :riddim, input_html: {id: 'riddim-select'} %>
  <%= f.association :producer, input_html: {id: 'producer-select'} %>
  <%= f.label :original %>
  <%= f.check_box :original %>
  <br>
  <%= f.submit %>
<% end %>
